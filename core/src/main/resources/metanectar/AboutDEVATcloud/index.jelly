<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:s="/lib/form">
  <l:layout title="${%about(app.VERSION)}">
    <l:main-panel>
      <h1>${%about(app.VERSION)}</h1>

      <j:if test="${it.publicKey != null}">
        <h2>${%SSH Public Key}</h2>
        <p>The SSH public key of this DEV@cloud Private Edition installation.
            This public key must be declared on provisioned master machines so that DEV@cloud Private Edition can
            securely managing masters on those machines.
        </p>
        <table style="table-layout:fixed;word-wrap:break-word" width="100%">
          <tr>
            <td><pre>${it.publicKey}</pre></td>
          </tr>
        </table>
      </j:if>

      <h2>${%Properties}</h2>
          <table class="pane sortable bigtable">
              <tr>
                <th class="pane-header">${%Property Name}</th>
                <th class="pane-header">${%Property Value}</th>
              </tr>
            <j:forEach var="e" items="${it.getProperties().entrySet()}">
              <tr>
                <td><pre>${e.key}</pre></td>
                <td><pre>${e.value}</pre></td>
              </tr>
            </j:forEach>
          </table>

      <h2>${%Dependencies}</h2>
      <p>
        ${%dependency_text}
      </p>
      <t:thirdPartyLicenses>
        <st:include page="/META-INF/licenses.xml" optional="true" />
      </t:thirdPartyLicenses>
    </l:main-panel>
  </l:layout>
</j:jelly>
