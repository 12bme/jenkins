<!--
  Side panel for the project view.
-->
<j:jelly xmlns:j="jelly:core" xmlns:x="jelly:xml" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
    <p><img src="${imagesURL}/24x24/blue.png"/> Created</p>
    <p><img src="${imagesURL}/24x24/blue.png"/> Approved</p>

    <j:choose>
        <j:when test="${it.online}">
            <p><img src="${imagesURL}/24x24/blue.gif"/> Connected</p>
        </j:when>
        <j:otherwise>
            <p><img src="${imagesURL}/24x24/red.gif"/> Disconnected</p>
        </j:otherwise>
    </j:choose>

    <j:choose>
        <j:when test="${it.online}">
            <form method="post" action="disconnect">
                <f:submit value="TEST: disconnect"/>
            </form>
            <!--
            <h1>${%Thread Dump}</h1>
            <j:forEach var="t" items="${it.getThreadDump().entrySet()}">
                <h2>${t.key}</h2>
                <pre>${t.value}</pre>
            </j:forEach>
            -->
        </j:when>
        <j:otherwise>
            <j:if test="${it.offline and it.error!=null}">
                <p>${it.error}</p>
            </j:if>
        </j:otherwise>
    </j:choose>

</j:jelly>
